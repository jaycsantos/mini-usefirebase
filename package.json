{
  "name": "mini-usefirebase",
  "private": false,
  "version": "0.6.0",
  "type": "module",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "/dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaycsantos/mini-usefirebase.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "test": "firebase emulators:exec --log-verbosity SILENT \"npx vitest run --coverage\"",
    "test:watch": "firebase emulators:exec --ui --log-verbosity SILENT \"npx vitest watch\"",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "firebase": "^11.1.0",
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^4.0.1",
    "@testing-library/react": "^16.1.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.1",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-react-compiler": "^19.0.0-beta-27714ef-20250124",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-plugin-tsdoc": "^0.4.0",
    "firebase-admin": "^13.0.2",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "typedoc": "^0.27.6",
    "typedoc-github-wiki-theme": "^2.1.0",
    "typedoc-plugin-markdown": "^4.4.1",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "vite-plugin-dts": "^4.5.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "description": "Minimal firebase react hooks",
  "directories": {
    "test": "test"
  },
  "keywords": [
    "react",
    "firebase"
  ],
  "author": "jaycsantos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jaycsantos/mini-usefirebase/issues"
  },
  "homepage": "https://github.com/jaycsantos/mini-usefirebase/wiki"
}
